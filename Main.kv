MDScreen:

    MDBottomNavigation:
        panel_color: "#2C9D06"
        selected_color_background: "#97ecf8"
        text_color_active: "white"
        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'School Info'
            icon: 'ab-testing'
            md_bg_color: "gray"
            MDLabel:
                text: "O'quv kurslari "
                text_color_active: "white"
                font_style: "H4"
                pos_hint: {'center_x': .7, 'center_y': .7}
                allow_stretch: True
            MDIcon:
                icon: "pot-steam"
                pos_hint: {'center_x': .8 , 'center_y': .7}
            MDLabel:
                text: "IT sohasidagi yangi ko'nikmalarni o'zlashtirishni, malaka oshirishni va ko'proq pul ishlashni xohlaysanmi? Biz senga yordam beramiz! Bizning malakali o'qituvchilarimiz senga axborot texnologiyalarining barcha tendentsiyalari to'g'risida ma'lumot va ko'nikmalar beradilar. Biz bilan sen eng zamonaviy darsliklardan foydalangan holda IT-bilimlarga ega bo'lasan. Marhamat, quyida keltirilgan, bugungi kundagi eng mashhur IT yo'nalishlardan birini tanla va hayotingni hoziroq yaxshi tarafga bur!"
                halign: 'center'
                text_color_active: "white"
            MDScrollView:
                scroll_timeout : 100
            MDSpinner:
                palette:
                    [0.28627450980392155, 0.8431372549019608, 0.596078431372549, 1],             [0.3568627450980392, 0.3215686274509804, 0.8666666666666667, 1],             [0.8862745098039215, 0.36470588235294116, 0.592156862745098, 1],             [0.8784313725490196, 0.9058823529411765, 0.40784313725490196, 1],
            MDSpinner:
                size_hint: None, None
                size: dp(46), dp(46)
                pos_hint: {'center_x': .5, 'center_y': .2}
                active: True if check.active else False
            MDCheckbox:
                id: check
                size_hint: None, None
                size: dp(48), dp(48)
                pos_hint: {'center_x': .5, 'center_y': .1}
                active: False
        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Video-darslik'
            icon: 'video'
            md_bg_color: 1,0,0,8
            MDSmartTile:
                radius: 50
                source: "images/icon.png"
                pos_hint: {"center_x": .9, "center_y": .9}
                on_press: app.video_playback()
                size_hint: None, None
                size: "32dp", "32dp"
            ScreenManager:
                AddVideo:
				MenuScreen:
					height: root.height -dp(50)
                    video_state: 'play'
                    audio: 'stop'



        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Login_for_system'
            icon: 'login-variant'
            MDLabel:
                text: "O'quv kurslariga yozilish...\n"
                pos_hint: {'center_x': .7, 'center_y': .8}
            MDTextField:
                hint_text: "F.I.SH"
                pos_hint: {'center_x': .5 , 'center_y': .5}
            MDTextField:
                hint_text: "Email"
                pos_hint: {'center_x': .5 , 'center_y': .4}
            MDTextField:
                hint_text: "Telefon Raqamingiz"
                pos_hint: {'center_x': .5 , 'center_y': .3}
            MDFlatButton:
                text: "Register"
                theme_text_color: "Custom"
                md_bg_color: 0, 0, 1, 4
                font_size: "36sp"
                pos_hint: {'center_x': .5, 'center_y': .2}
        MDBottomNavigationItem:
            name: 'screen 4'
            text: 'Data_time'
            md_bg_color: 3,1,0,6
            icon: 'update'
            MDFloatLayout:
                MDRaisedButton:
                    text: "Open time picker"
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    on_release: app.show_time_picker()
            MDFloatLayout:
                MDFlatButton:
                    text: "Meni hech qachon\n bosma please!?..."
                    pos_hint: {'center_x': .5, 'center_y': .7}
                    on_release: app.show_alert_dialog()




<AddVideo>:
	name: 'video'
	MDSmartTile:
        radius: 24
        box_radius: [0, 0, 24, 24]
        box_color: 1, 1, 1, .2
        source: "images/cake.jpg"
        pos_hint: {"center_x": .5, "center_y": .5}
        on_press: root.manager.current = 'screen 1'
        size_hint: None, None
        size: "320dp", "320dp"
        MDIconButton:
            icon: "heart-outline"
            theme_icon_color: "Custom"
            icon_color: 1, 0, 0, 1
            pos_hint: {"center_y": .5}
            on_release: self.icon = "heart" if self.icon == "heart-outline" else "heart-outline"
        MDLabel:
            text: "Kompyuter bilan tanishing."
            bold: True
            color: 1, 1, 1, 1
            text_bg_color: 1,0,0,4

<MenuScreen>:
    name: 'screen 1'
    Video:
		source: 'hello.mp4'
		state: app.video_state()

		state: app.video_state()
    MDRectangleFlatButton:
        text: 'Back'
        pos_hint: {'center_x':0.5,'center_y':0.1}
        on_press: root.manager.current = 'video'

